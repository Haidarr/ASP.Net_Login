@model LoginModel
@{
    ViewBag.AppName = "My Project";
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <title>@ViewData["Title"] - @ViewBag.AppName</title>
        <link href="~/images/favicon.ico" type="image/x-icon" rel="shortcut icon">

        @* Bootstrap & FontAwesome *@
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="~/lib/font-awesome/css/all.css" rel="stylesheet">
        @* Login *@

    </head>

    <body>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-12 col-md-9">
                    <div class="card o-hidden my-5">
                        <div class="card-body p-0">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text mb-4">Welcome to @ViewBag.AppName</h1>
                                        </div>

                                        <form class="user" method="post" asp-action="Login" autocomplete="off">
                                            <div class="form-group">
                                                <input type="text" class="form-control form-control-user" asp-for="Username" placeholder="User Name" autofocus>
                                                <span asp-validation-for="Username" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control form-control-user" asp-for="Password" placeholder="Password">
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>

                                            @Html.ValidationSummary(true)
                                      
                                            <button type="submit" class="btn btn-primary btn-user btn-block">Login</button>

                                        </form>
                                    
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>